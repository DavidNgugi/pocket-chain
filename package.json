{
  "name": "pocketflow-node",
  "version": "1.0.0",
  "description": "A 100-line minimalist LLM framework for TypeScript/Node.js - inspired by PocketFlow by Zachary Huang",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "llm",
    "framework",
    "typescript",
    "nodejs",
    "agent",
    "workflow",
    "rag",
    "ai",
    "pocketflow"
  ],
  "author": "David Ngugi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DavidNgugi/pocketflow-node.git"
  },
  "bugs": {
    "url": "https://github.com/DavidNgugi/pocketflow-node/issues"
  },
  "homepage": "https://github.com/DavidNgugi/pocketflow-node#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
} 